#include "pipex.h"

char *get_env(char **av)
{
    int i;

    i = 0;
    while (av[i])
    {
        if (ft_strncmp(av[i], "PATH", 4) == 0)
        {
            return (ft_strdup(av[i] + 5));
            exit(0);
        }
        i++;
    }
    return (0);
}

int execute(char *env, char *cd)
{
    char **paths;
    char *full_cmd;
    char **cmd;
    int i;

    paths = ft_split(env, ':');
    cmd = ft_split(cd, ' ');
    i = 0;
    while (paths[i])
    {
        full_cmd = ft_strjoin(ft_strjoin(paths[i], "/"), cmd[1]);
        printf("%s\n", full_cmd);
        if (access(full_cmd, X_OK) == 0)
        {
            execve(full_cmd, cmd, NULL);
            write (2, "Error:\nexecve error", 19);
            exit (1);
        }
        i++;
    }
    return (0);
}

int main(int ac, char **av, char **envp)
{
    char *env;
    int pid1;
    int pid2;
    int c_status;
    int fd[2];
    int lbiba[2];

    if (ac != 5)
    {
        write (2, "Error:\ninvalid input\n", 21);
        return (1);
    }
    env = get_env(envp);
    if z
    fd[1] = open(av[1], O_RDWR);
    fd[1] = open(av[4], O_CREAT | O_RDWR);
    if (fd[1] == -1 || fd[1] == -1)
    {
        write (2, "Error:\nError while Opning files\n", 33);
        return (1);
    }
    pipe (lbiba);
    pid1 = fork();
    if (pid1 == 0)
    {
        dup2 (fd[1], 0);
        dup2 (lbiba[1], 1);
        close (fd[1]);
        close(lbiba[1]);
        close (fd[1]);
        close(lbiba[1]);
        if (!execute(env, av[2]))
        {
            write (2, "Error:\ncmd1 is not executable !!\n", 33);
            return (2);
        }

    }
    fork();
    if (pid2 == 0)
    {
        dup2 (lbiba[1], 0);
        dup2 (fd[1], 1);
        close (fd[1]);
        close (fd[1]);
        close (lbiba[1]);
        close (lbiba[1]);
        if (!execute(env, av[3]))
        {
            write (2, "Error:\ncmd2 is not executable !!\n", 33);
            return (2);
        }
    }
    waitpid(pid1, NULL, 0);
    waitpid(pid2, NULL, 0);
    return(0);
}
